.user {
  width: 100%;
  height: 400rpx;
  position: relative;
  background-color: #fafafa;
}
.user .bkg {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 400rpx;
  overflow: hidden;
  filter: blur(60rpx);
}
.user .bkg image {
  width: 100%;
}
.user .header {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  display: flex;
  flex-direction: column;
  width: 150rpx;
  height: 280rpx;
  justify-content: space-around;
  align-items: center;
}
.user .header .headerImage {
  border: solid 5rpx #c0c0c0;
  border-radius: 50%;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
}
.user .header .headerImage image {
  width: 150rpx;
  height: 150rpx;
}
.username {
  color: #f3f3f3;
  font-weight: 600;
  width: 300rpx;
  text-align: center;
}
.login {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 30%;
}
.function {
  position: absolute;
  top: 380rpx;
  left: 18.75rpx;
  width: 95%;
}
.option {
  margin-bottom: 40rpx;
  background-color: #fff;
  width: 100%;
  display: flex;
  border-radius: 20rpx;
  height: 150rpx;
  justify-content: center;
  justify-items: center;
  z-index: 999;
}
.option .optionItems {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  justify-items: center;
}
.option .optionItems image {
  width: 60rpx;
}
.option .optionItems .num {
  color: red;
  font-size: 32rpx;
}
page {
  background-color: #ececec;
}
.feedback {
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 40rpx;
  font-family: "微软雅黑";
  font-size: 32rpx;
  width: 100%;
  background-color: #fff;
}
.feedback::after {
  content: '';
  position: absolute;
  right: 15rpx;
  top: 22rpx;
  width: 0;
  height: 0;
  border: 15rpx solid;
  border-color: transparent transparent transparent #5a5757;
}
