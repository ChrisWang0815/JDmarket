view{
    color: var(--themeColor);
}

swiper{
   width: 100%;
    border-radius:10rpx;
    overflow: hidden;
}

.swiperimg{
    width: 100%;
}
.category{ 
    display: flex;
}
.category navigator{
   margin-top: 20rpx;
   padding: 0 30rpx;
   flex: 1;
   
}
.category image{
    width: 100%;
    
}
.floorContent navigator{
    float: left;
    width: 33.3%;
  border-left: 10rpx solid rgb(245, 242, 242);
    
}
.floorTitle{
    display: inline-block;
    padding: 10rpx 0;
    margin-top: 30rpx;
}
.floorContent navigator:nth-child(1){
    height: calc(27.7vw * 2);  
}
navigator:nth-child(-n+5){
    height: 27.6vw;  
}
navigator:nth-child(2){
    border-bottom: 10rpx solid rgb(245, 242, 242);
}
navigator:nth-child(3){
    border-bottom: 10rpx solid rgb(245, 242, 242);
}
.floorContent navigator image{
    width: 100%;
    height: 100%;
}