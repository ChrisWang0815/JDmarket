.goodsItems {
    display: flex;
    border-bottom: 3rpx solid #ccc;
    height: 242rpx;
    margin: 0 20rpx;
  }
  .goodsItems .goodsImages {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .goodsItems .goodsImages image {
    width: 80%;
  }
  .goodsItems .goodsInfo {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 3;
  }
  .goodsItems .goodsInfo .goodsName {
    padding-top: 20rpx;
    font-size: 30rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  .goodsItems .goodsInfo .goodsInfoB {
      position: relative;
    display: flex;
    justify-content: space-between;
  }
  .goodsItems .goodsInfo .goodsInfoB .goodsPrice {
    font-size: 34rpx;
    color: #d40a0a;
    padding-bottom: 20rpx;
  }
  .goodsItems .goodsInfo .goodsInfoB .goodsSell {
      position: absolute;
      bottom: 22rpx;
      right: 0;
z-index: 999;
    font-size: 26rpx;
    font-family: "微软雅黑";
    color: rgb(248, 248, 248);
    border: 3rpx solid rgb(0, 163, 0);
    background-color: rgb(0, 163, 0);
    height: 45rpx;
    line-height: 45rpx;
    width: 120rpx;
    text-align: center;
    border-radius: 20rpx;
    
  }
